---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";

const { title, subTitle } = Astro.props;
---

<header>
  <nav>
    <Hamburger />
    <ThemeIcon />
    <Navigation />
  </nav>

  <h1>{title}</h1>

  {subTitle && <h2>{subTitle}</h2>}
</header>

<style>
  h1 {
    color: purple;
    font-size: 4rem;
  }
</style>

<script>
  import "../scripts/menu.js";
</script>
